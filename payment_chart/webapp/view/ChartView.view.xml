<mvc:View controllerName="sync6.c1.paymentchart.controller.ChartView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:mr="sap.suite.ui.microchart"
    >
    <Page id="page" title="{i18n>title}">

            <viz:VizFrame id="idLineFrame" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='line'>
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{/PaysumSet}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition name="Airline" value="{Carrid}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="Price" value="{Price}" />
                            <viz.data:MeasureDefinition name="Total" value="{Paymentsum}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem id='valueAxisFeed' uid="valueAxis" type="Measure"
                        values="Price" />
                    <viz.feeds:FeedItem id='valueAxisFeed2' uid="valueAxis" type="Measure"
                        values="Total" />
                    <viz.feeds:FeedItem id='categoryAxisFeed' uid="categoryAxis" type="Dimension"
                        values="Airline" />
                </viz:feeds>
                <viz:dependents>
                    <viz:Popover id="idPopOver"></viz:Popover>
                </viz:dependents>

            </viz:VizFrame>

            <FlexBox width="700px" height="400px" alignItems="Start" justifyContent="SpaceBetween">
                <mr:InteractiveDonutChart displayedSegments="15" segments="{/PaysumSet}" >

                <mr:InteractiveDonutChartSegment label="{Carrid}" 
                                                value="{=parseInt(${Paymentsum})}" 
                                                displayedValue="{Paymentsum}"
                                                color="Critical" />

                </mr:InteractiveDonutChart>
            </FlexBox>
    </Page>
</mvc:View>